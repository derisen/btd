{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Project List</h1>
    <p class="count">
        Displaying {{ projects|length }} projects of {{ projects.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('project_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('project_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Url</th>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
            {% for project in projects %}
                <tr>
                    <td>
                        <a href="{{ path('project_show', { 'id': project.id }) }}">
                            {{ project.title }}
                        </a>
                    </td>
                    <td>{{ project.description }}</td>
                    <td>{{ project.url }}</td>
                    <td>{% if project.created %}{{ project.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if project.updated %}{{ project.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(projects) }}
    </div>

{% endblock %}
