{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>ProjectContribution</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('project_contribution_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('project_contribution_edit', { 'id': projectContribution.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('project_contribution_delete', { 'id': projectContribution.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ProjectContribution?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if projectContribution.created %}{{ projectContribution.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if projectContribution.updated %}{{ projectContribution.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
