{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>MediaFile</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('media_file_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('media_file_edit', { 'id': mediaFile.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('media_file_delete', { 'id': mediaFile.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this MediaFile?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>

    {% if mediaFile.mimetype starts with 'image/' %}
        {% include 'AppBundle:MediaFile:image.html.twig' %}
    {% elseif mediaFile.mimetype starts with 'video/' %}
        {% include 'AppBundle:MediaFile:video.html.twig' %}
    {% elseif mediaFile.mimetype starts with 'audio/' %}
        {% include 'AppBundle:MediaFile:audio.html.twig' %}
    {% elseif mediaFile.mimetype == 'application/pdf' %}
        {% include 'AppBundle:MediaFile:pdf.html.twig' %}
    {% else %}
        {% include 'AppBundle:MediaFile:unknown.html.twig' %}
    {% endif %}    

    <h2>Meta data</h2>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>{{ mediaFile.title }}</dd>
        <dt>Description</dt>
        <dd>{{ mediaFile.description }}</dd>
        <dt>Copyright</dt>
        <dd>{{ mediaFile.copyright }}</dd>
        <dt>File size</dt>
        <dd>{{ mediaFile.size }}</dd>
        <dt>Original file name</dt>
        <dd>{{ mediaFile.originalName }}
    </dl>
    
{% endblock %}
