{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>MediaFile</h1>
 {% endblock %} 

{% block body %}

    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('media_file_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        <a href="{{ path('media_file_edit', { 'id': mediaFile.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('media_file_delete', { 'id': mediaFile.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this MediaFile?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Path</th>
            <td>{{ mediaFile.path }}</td>
            </tr>
            <tr>
                <th>Size</th>
            <td>{{ mediaFile.size }}</td>
            </tr>
            <tr>
                <th>Mimetype</th>
            <td>{{ mediaFile.mimetype }}</td>
            </tr>
            <tr>
                <th>Creator</th>
            <td>{{ mediaFile.creator }}</td>
            </tr>
            <tr>
                <th>Title</th>
            <td>{{ mediaFile.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
            <td>{{ mediaFile.description }}</td>
            </tr>
            <tr>
                <th>Copyright</th>
            <td>{{ mediaFile.copyright }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if mediaFile.created %}{{ mediaFile.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if mediaFile.updated %}{{ mediaFile.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
