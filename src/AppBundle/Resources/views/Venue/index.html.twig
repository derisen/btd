{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Venue List</h1>
    <p class="count">
        Displaying {{ venues|length }} venues of {{ venues.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('venue_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('venue_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Description</th>
                <th>Url</th>
                <th>Created</th>
                <th>Updated</th>            </tr>
        </thead>
        <tbody>
            {% for venue in venues %}
                <tr>
                    <td>
                        <a href="{{ path('venue_show', { 'id': venue.id }) }}">
                            {{ venue.name }}
                        </a>
                    </td>
                    <td>{{ venue.address }}</td>
                    <td>{{ venue.description }}</td>
                    <td>{{ venue.url }}</td>
                    <td>{% if venue.created %}{{ venue.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if venue.updated %}{{ venue.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(venues) }}
    </div>

{% endblock %}
