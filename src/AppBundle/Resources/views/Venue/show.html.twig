{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Venue</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('venue_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('venue_edit', { 'id': venue.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('venue_delete', { 'id': venue.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Venue?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ venue.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ venue.address }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ venue.description }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ venue.url }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if venue.created %}{{ venue.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if venue.updated %}{{ venue.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
