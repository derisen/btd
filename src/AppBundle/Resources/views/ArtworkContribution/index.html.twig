{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>ArtworkContribution List</h1>
    <p class="count">
        Displaying {{ artworkContributions|length }} artworkContributions of {{ artworkContributions.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('artwork_contribution_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('artwork_contribution_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Person</th>
                <th>Organization</th>
                <th>Role</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Delete</th>
            </tr>            
        </thead>
        <tbody>
            {% for artworkContribution in artworkContributions %}
                <tr>
                    <td>
                        {% if artworkContribution.person %}
                            <a href="{{ path('person_show', {'id': artworkContribution.person.id}) }}">{{artworkContribution.person}}</a>
                        {% endif %}
                    </td>
                    <td>
                        {% if artworkContribution.organization %}
                            <a href="{{ path('organization_show', {'id': artworkContribution.organization.id}) }}">{{artworkContribution.organization}}</a>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('artwork_role_show', {'id': artworkContribution.artworkRole.id}) }}">{{artworkContribution.artworkRole}}</a>
                    </td>
                    <td>
                        {{ artworkContribution.created|date }}
                    </td>
                    <td>
                        {{ artworkContribution.updated|date('Y-m-d H:i:s') }}
                    </td>
                    <td>
                        <a href="{{ path('artwork_contribution_delete', { 'id': artworkContribution.id }) }}" data-confirm="Are you sure you want to delete this ArtworkContribution?">
                            Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(artworkContributions) }}
    </div>

{% endblock %}
