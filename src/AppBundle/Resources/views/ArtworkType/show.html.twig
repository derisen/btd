{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>ArtworkType</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('artwork_type_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('artwork_type_edit', { 'id': artworkType.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('artwork_type_delete', { 'id': artworkType.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ArtworkType?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ artworkType.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ artworkType.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artworkType.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if artworkType.created %}{{ artworkType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if artworkType.updated %}{{ artworkType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% if artworkType.artworks|length > 0 %}
        <h2>Art works</h2>
        {% for artwork in artworkType.artworks %}
            <p>
                <strong><a href="{{ path('artwork_show', {'id': artwork.id}) }}">{{ artwork }}</a></strong>
            </p>
        {% endfor %}
    {% endif %}

{% endblock %}
