{% extends 'base.html.twig' %}

 {% block pageheader %} 
    <h1>ArtworkType List</h1>
    <p class="count">
        Displaying {{ artworkTypes|length }} artworkTypes of {{ artworkTypes.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('artwork_type_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            <a href="{{ path('artwork_type_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>                
                <th>Created</th>
                <th>Updated</th>            
            </tr>
        </thead>
        <tbody>
        {% for artworkType in artworkTypes %}
            <tr>
                <td>
                    <a href="{{ path('artwork_type_show', { 'id': artworkType.id }) }}">
                        {{ artworkType.name }}
                    </a>
                </td>
                <td>{{ artworkType.label }}</td>
                <td>{% if artworkType.created %}{{ artworkType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if artworkType.updated %}{{ artworkType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(artworkTypes) }}
    </div>

{% endblock %}
