{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>MediaFileType</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('media_file_type_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('media_file_type_edit', { 'id': mediaFileType.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('media_file_type_delete', { 'id': mediaFileType.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this MediaFileType?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ mediaFileType.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ mediaFileType.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mediaFileType.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if mediaFileType.created %}{{ mediaFileType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if mediaFileType.updated %}{{ mediaFileType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% for mediaFile in mediaFileType.mediaFiles %}
        <div class='row'>
            <div class='col-sm-4'>
                <a href="{{ path('media_file_show', { 'id': mediaFile.id }) }}">
                    <img src="{{ path('media_file_tn', {'id': mediaFile.id}) }}" class="img-thumbnail">
                </a>
            </div>
            <div class='col-sm-8'>
                {{ mediaFile.getMetadataFields('dc_title', false) }}
                <dl class="dl-horizontal">
                    <dt>Id</dt>
                    <dd>{{ mediaFile.id }}</dd>
                    <dt>File type</dt>
                    <dd>{{ mediaFile.mimeType }}</dd>
                    <dt>Original name</dt>
                    <dd>{{ mediaFile.originalName }}</dd>
                    <dt>Uploaded</dt>
                    <dd>{{ mediaFile.updated|date }}</dd>
                    <dt>URL</dt>
                    <dd>
                        <a href="{{ path('media_file_raw', {'id': mediaFile.id}) }}">
                            {{ url('media_file_raw', {'id': mediaFile.id}) }}
                        </a>
                    </dd>
            </div>
        </div>
    {% endfor %}


{% endblock %}
