{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Artwork</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('artwork_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('artwork_edit', { 'id': artwork.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('artwork_delete', { 'id': artwork.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Artwork?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ artwork.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artwork.description }}</td>
            </tr>
            <tr>
                <th>Materials</th>
                <td>{{ artwork.materials }}</td>
            </tr>
            <tr>
                <th>Copyright</th>
                <td>{{ artwork.copyright }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if artwork.created %}{{ artwork.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if artwork.updated %}{{ artwork.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
