{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>VenueType List</h1>
    <p class="count">
        Displaying {{ venueTypes|length }} venueTypes of {{ venueTypes.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('venue_type_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>                
                <th>Created</th>
                <th>Updated</th>            
            </tr>
        </thead>
        <tbody>
            {% for venueType in venueTypes %}
                <tr>
                    <td>
                        <a href="{{ path('venue_type_show', { 'id': venueType.id }) }}">
                            {{ venueType.name }}
                        </a>
                    </td>
                    <td>{{ venueType.label }}</td>
                    <td>{% if venueType.created %}{{ venueType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if venueType.updated %}{{ venueType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(venueTypes) }}
    </div>

{% endblock %}
