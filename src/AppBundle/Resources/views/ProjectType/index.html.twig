{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>ProjectType List</h1>
    <p class="count">
        Displaying {{ projectTypes|length }} projectTypes of {{ projectTypes.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('project_type_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>                
                <th>Created</th>
                <th>Updated</th>            
            </tr>
        </thead>
        <tbody>
            {% for projectType in projectTypes %}
                <tr>
                    <td>
                        <a href="{{ path('project_type_show', { 'id': projectType.id }) }}">
                            {{ projectType.name }}
                        </a>
                    </td>
                    <td>{{ projectType.label }}</td>
                    <td>{% if projectType.created %}{{ projectType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if projectType.updated %}{{ projectType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(projectTypes) }}
    </div>

{% endblock %}
