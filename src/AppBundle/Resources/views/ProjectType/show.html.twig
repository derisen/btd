{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>ProjectType</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('project_type_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('project_type_edit', { 'id': projectType.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('project_type_delete', { 'id': projectType.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this ProjectType?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ projectType.name }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ projectType.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projectType.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if projectType.created %}{{ projectType.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if projectType.updated %}{{ projectType.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% if projectType.projects|length > 0 %}
        <h2>Projects</h2>
        {% for project in projectType.projects %}
            <p>
                <strong>
                    <a href="{{ path('project_show', {'id': project.id}) }}">{{ project }}</a>
                </strong><br />
                <a href="{{ path('location_show', {'id': project.venues[0].location.id}) }}">{{ project.venues[0].location }}</a>:
                {{ project.startDate|date }} - {{ project.endDate|date }}
            </p>
            {{ project.excerpt|raw }}

        {% endfor %}
    {% endif %}

{% endblock %}
