{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Organization</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('organization_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            <a href="{{ path('organization_edit', { 'id': organization.id }) }}" class="btn btn-default">
                <span class='glyphicon glyphicon-edit'></span> Edit
            </a>
            <a href="{{ path('organization_delete', { 'id': organization.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Organization?">
                <span class='glyphicon glyphicon-remove'></span> Delete
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ organization.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ organization.address }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ organization.description }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ organization.url }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ organization.contact }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if organization.created %}{{ organization.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if organization.updated %}{{ organization.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
